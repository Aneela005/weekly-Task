// Q1: Pizza Billing System
// Topics Covered: Strings, If-Else, Switch, Math Operators, Booleans, Output, Comments

import java.util.Scanner; // Import Scanner for user input

public class PizzaBillingSystem {
    public static void main(String[] args) {

        // Create Scanner object to read user input
        Scanner input = new Scanner(System.in);

        // Step 1: Ask the user for pizza size
        System.out.print("Enter pizza size (small/medium/large): ");
        String size = input.nextLine().toLowerCase(); // Convert input to lowercase for easy comparison

        int bill = 0; // Variable to store total bill

        // Step 2: Assign base price using switch statement
        switch (size) {
            case "small":
                bill = 100;
                break;
            case "medium":
                bill = 200;
                break;
            case "large":
                bill = 300;
                break;
            default:
                System.out.println("Invalid size entered!");
                input.close();
                return; // Exit program if invalid input
        }

        // Step 3: Ask if user wants pepperoni
        System.out.print("Do you want pepperoni? (yes/no): ");
        String pepperoni = input.nextLine().toLowerCase();

        if (pepperoni.equals("yes")) {
            if (size.equals("small")) {
                bill += 30;
            } else { // medium or large
                bill += 50;
            }
        }

        // Step 4: Ask if user wants extra cheese
        System.out.print("Do you want extra cheese? (yes/no): ");
        String cheese = input.nextLine().toLowerCase();

        if (cheese.equals("yes")) {
            bill += 20;
        }

        // Step 5: Display the final bill
        System.out.println("Your final bill is: " + bill + " rupees");

        // Close Scanner
        input.close();
    }
}



// Q2: Array Analyzer
// Topics Covered: Arrays, Loops, If-Else, Math Operations, Output, Comments

import java.util.Scanner;

public class ArrayAnalyzer {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

        // Step 1: Ask user for number of elements
        System.out.print("Enter how many numbers you want to input (N): ");
        int N = input.nextInt();

        int[] numbers = new int[N]; // Array to store user input numbers

        // Step 2: Input N numbers into the array
        System.out.println("Enter " + N + " numbers:");
        for (int i = 0; i < N; i++) {
            numbers[i] = input.nextInt();
        }

        // Step 3: Initialize variables for calculations
        int sum = 0;
        int min = numbers[0];
        int max = numbers[0];
        int evenCount = 0;
        int oddCount = 0;

        // Step 4: Calculate sum, min, max, even/odd count
        for (int num : numbers) {
            sum += num;

            if (num < min) min = num;
            if (num > max) max = num;

            if (num % 2 == 0)
                evenCount++;
            else
                oddCount++;
        }

        // Step 5: Calculate average (type casting to show decimal)
        double average = (double) sum / N;

        // Step 6: Display results
        System.out.println("\n--- Array Analysis Result ---");
        System.out.println("Sum = " + sum);
        System.out.println("Average = " + average);
        System.out.println("Minimum = " + min);
        System.out.println("Maximum = " + max);
        System.out.println("Even Numbers Count = " + evenCount);
        System.out.println("Odd Numbers Count = " + oddCount);

        // Step 7: Print array in reverse order
        System.out.print("Array in Reverse Order: ");
        for (int i = N - 1; i >= 0; i--) {
            System.out.print(numbers[i] + " ");
        }

        // Close Scanner
        input.close();
    }
}



// Q3: Utility Method Pack
// Topics Covered: Methods, Conditionals, Loops, Arithmetic Operations, Booleans, User Input

import java.util.Scanner;

public class UtilityMethodPack {

    // Method 1: Add two numbers
    public static int add(int a, int b) {
        return a + b;
    }

    // Method 2: Subtract two numbers
    public static int subtract(int a, int b) {
        return a - b;
    }

    // Method 3: Multiply two numbers
    public static long multiply(int a, int b) {
        return (long) a * b;
    }

    // Method 4: Divide two numbers (guard against divide-by-zero)
    public static double divide(int a, int b) {
        if (b == 0) {
            System.out.println("Error: Cannot divide by zero!");
            return 0.0;
        }
        return (double) a / b;
    }

    // Method 5: Find maximum of three numbers
    public static int maxOfThree(int a, int b, int c) {
        int max = a;
        if (b > max) max = b;
        if (c > max) max = c;
        return max;
    }

    // Method 6: Check if a number is prime
    public static boolean isPrime(int n) {
        if (n <= 1) return false; // 0 and 1 are not prime
        for (int i = 2; i <= n / 2; i++) {
            if (n % i == 0)
                return false;
        }
        return true;
    }

    // Main method to demonstrate all utility methods
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Demonstration of each method
        System.out.println("=== Utility Method Pack ===");

        // Addition
        System.out.print("Enter two numbers to add: ");
        int a1 = input.nextInt();
        int b1 = input.nextInt();
        System.out.println("Sum = " + add(a1, b1));

        // Subtraction
        System.out.print("\nEnter two numbers to subtract: ");
        int a2 = input.nextInt();
        int b2 = input.nextInt();
        System.out.println("Difference = " + subtract(a2, b2));

        // Multiplication
        System.out.print("\nEnter two numbers to multiply: ");
        int a3 = input.nextInt();
        int b3 = input.nextInt();
        System.out.println("Product = " + multiply(a3, b3));

        // Division
        System.out.print("\nEnter two numbers to divide: ");
        int a4 = input.nextInt();
        int b4 = input.nextInt();
        System.out.println("Quotient = " + divide(a4, b4));

        // Max of three numbers
        System.out.print("\nEnter three numbers to find the maximum: ");
        int x = input.nextInt();
        int y = input.nextInt();
        int z = input.nextInt();
        System.out.println("Maximum = " + maxOfThree(x, y, z));

        // Prime check
        System.out.print("\nEnter a number to check if it's prime: ");
        int p = input.nextInt();
        System.out.println(p + (isPrime(p) ? " is a Prime number." : " is NOT a Prime number."));

        input.close();
    }
}




// Q4: Method Overloading - Area Calculator
// Topics Covered: Method Overloading, Return Types, Math Operations, User Input

import java.util.Scanner;

public class AreaCalculator {

    // Overloaded method 1: Area of Circle
    public static double area(double radius) {
        return Math.PI * radius * radius; // Formula: πr²
    }

    // Overloaded method 2: Area of Rectangle
    public static double area(double length, double width) {
        return length * width; // Formula: l × w
    }

    // Overloaded method 3: Area of Square
    public static double areaSquare(double side) {
        return side * side; // Formula: side²
    }

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);

        System.out.println("=== Area Calculator Using Method Overloading ===");

        // Circle
        System.out.print("\nEnter radius of circle: ");
        double r = input.nextDouble();
        System.out.println("Area of Circle = " + area(r));

        // Rectangle
        System.out.print("\nEnter length of rectangle: ");
        double l = input.nextDouble();
        System.out.print("Enter width of rectangle: ");
        double w = input.nextDouble();
        System.out.println("Area of Rectangle = " + area(l, w));

        // Square
        System.out.print("\nEnter side of square: ");
        double s = input.nextDouble();
        System.out.println("Area of Square = " + areaSquare(s));

        input.close();
    }
}



// Project 1: ATM Simulation System
// Topics: Loops, Methods, If-Else, Switch, Input Validation, Break & Continue

import java.util.Scanner;

public class ATMSimulation {

    static int balance = 0; // global balance variable
    static final int PIN = 1234; // predefined correct PIN

    // Method to deposit amount
    public static void deposit(int amount) {
        if (amount > 0) {
            balance += amount;
            System.out.println("Deposit successful.");
        } else {
            System.out.println("Invalid amount! Try again.");
        }
    }

    // Method to withdraw amount
    public static void withdraw(int amount) {
        if (amount <= 0) {
            System.out.println("Invalid amount! Try again.");
        } else if (amount > balance) {
            System.out.println("Insufficient balance!");
        } else {
            balance -= amount;
            System.out.println("Withdrawal successful.");
        }
    }

    // Method to check balance
    public static void checkBalance() {
        System.out.println("Your balance is: " + balance);
    }

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        boolean authenticated = false;

        // Step 1: Login attempt (3 tries)
        for (int attempts = 3; attempts > 0; attempts--) {
            System.out.print("Enter PIN: ");
            int enteredPin = input.nextInt();

            if (enteredPin == PIN) {
                authenticated = true;
                System.out.println("Login successful!");
                break;
            } else {
                System.out.println("Wrong PIN! Attempts left: " + (attempts - 1));
            }
        }

        if (!authenticated) {
            System.out.println("Account locked. Too many failed attempts.");
            input.close();
            return;
        }

        // Step 2: ATM Menu using while loop
        while (true) {
            System.out.println("\n==== ATM Menu ====");
            System.out.println("1) Deposit");
            System.out.println("2) Withdraw");
            System.out.println("3) Check Balance");
            System.out.println("4) Exit");
            System.out.print("Choice: ");

            int choice = input.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter amount to deposit: ");
                    int depositAmount = input.nextInt();
                    deposit(depositAmount);
                    break;

                case 2:
                    System.out.print("Enter amount to withdraw: ");
                    int withdrawAmount = input.nextInt();
                    withdraw(withdrawAmount);
                    break;

                case 3:
                    checkBalance();
                    break;

                case 4:
                    System.out.println("Thank you for using the ATM. Goodbye!");
                    input.close();
                    return; // Exit program

                default:
                    System.out.println("Invalid option! Try again.");
                    continue;
            }
        }
    }
}





